<% provide(:title, "Quiz Result") %>
<div class="col-md-offset-3 col-md-6">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Quiz Result</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label>Content</label>
        <p><%= params[:question] %></p>
      </div>

      <div class="form-group">
        <label>Answer: </label>
        <span><%= params[:answer] %></span>
      </div>

      <div class="alert alert-<%= params[:status] %>"><%= params[:message] %></div>
      <%= link_to 'Try Again', new_quiz_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>
</div>